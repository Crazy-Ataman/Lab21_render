<div class="contacts">
	{{#each contacts}}
		{{>contact}}
	{{/each}}
</div>
<br>
<form action="/add" method="post" class="addForm">
	<input type="text" name="contact" placeholder="Фамилия, имя, отчество		Телефон">
	<input type="submit" class="add-btn" value="Добавить">
</form>
<script>
	document.querySelectorAll('#contact-btn').forEach(btn => {
		btn.disabled = true;
	});
</script>